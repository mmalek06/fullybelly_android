<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PaymentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- edit texts and text views -->
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/editTextsBottomPadding</item>
        <item name="android:paddingLeft">@dimen/editTextsLeftRightPadding</item>
        <item name="android:paddingRight">@dimen/editTextsLeftRightPadding</item>
    </style>

    <style name="Widget.App.TextViewAccent" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.TextViewWarningAccent" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/darkOrange</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.TextViewStandard" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.TextViewLight" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.TextViewLighter" parent="Widget.App.TextViewLight">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.TextViewDescriptionsText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="Widget.App.TextViewImageInfo" parent="Widget.App.TextViewDescriptionsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_accent_fill</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Widget.App.TextViewLogin" parent="Widget.App.TextViewStandard">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.ListTextViewRestaurantName" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.DetailTextViewRestaurantName" parent="Widget.App.ListTextViewRestaurantName">
        <item name="android:textSize">21dp</item>
    </style>

    <style name="Widget.App.TextViewDistance" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/lightGray</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.TextViewAvailableDishes" parent="Widget.App.TextViewDistance"></style>

    <style name="Widget.App.TextViewAvailableDishesCount" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.TextViewPrice" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.TextViewAvailableTomorrow" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.TextViewAvailableTomorrowBig" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.TextViewPickupTime" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/violetGray</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.DetailTextViewDistrict" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/extraLightGray</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Widget.App.DetailTextViewOldPrice" parent="Widget.App.DetailTextViewDistrict">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Widget.App.DetailTextViewNewPrice" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Widget.App.DetailTextViewAvailable" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/extraLightGray</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Widget.App.DetailTextViewAvailableCount" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkViolet</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Widget.App.DetailTextViewDescTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.OrderNameTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.OrdersListAndSettingsStdText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Widget.App.OrdersListAccentText" parent="Widget.App.OrdersListAndSettingsStdText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.App.OrdersListBoldText" parent="Widget.App.OrdersListAndSettingsStdText">
        <item name="android:textSize">13dp</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
    </style>

    <style name="Widget.App.SettingsStdText" parent="Widget.App.OrdersListAndSettingsStdText">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.DialogsTitleWeak" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/darkGray</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.App.DialogsTitleMedium" parent="Widget.App.DialogsTitleWeak">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.DialogsTitleStrong" parent="Widget.App.DialogsTitleWeak">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.App.PurchaseAmountEditText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkVioletTitle</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">21dp</item>
    </style>

    <style name="Widget.App.UserDetailsEditText" parent="Widget.App.PurchaseAmountEditText">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.SettingsEditText" parent="Widget.App.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.PurchaseTotalPrice" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="Widget.App.PurchasePickupTimes" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkViolet</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.NotificationText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deepDarkViolet</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- buttons -->
    <style name="Widget.App.SubmitButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingLeft">@dimen/submitButtonsMarginLeftRight</item>
        <item name="android:paddingRight">@dimen/submitButtonsMarginLeftRight</item>
        <item name="android:paddingTop">@dimen/submitButtonsMarginTopBottom</item>
        <item name="android:paddingBottom">@dimen/submitButtonsMarginTopBottom</item>
    </style>

    <style name="Widget.App.SearcherButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/buttonsLeftRightPadding</item>
        <item name="android:paddingRight">@dimen/buttonsLeftRightPadding</item>
        <item name="android:textColor">@color/buttontextcolor</item>
        <item name="android:textSize">14dp</item>
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
    </style>

    <style name="Widget.App.SearcherMainButton" parent="Widget.App.SubmitButton">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.SettingsSaveButton" parent="Widget.App.SubmitButton">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.AppDetailBuyButton" parent="Widget.App.SubmitButton">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Widget.App.SearcherOptionsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/orange</item>
        <item name="fontPath">fonts/Raleway-Bold.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Widget.App.PurchaseIncDecButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Raleway-ExtraBold.ttf</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="Widget.App.OkButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
    </style>

    <style name="Widget.App.CancelButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="fontPath">fonts/Raleway-Medium.ttf</item>
    </style>

    <!-- image views -->
    <style name="SearcherRestaurantLogoImageView">
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
