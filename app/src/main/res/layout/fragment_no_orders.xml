<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/noOrdersWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.fragments.ordersActivity.NoOrdersFragment">

        <TextView
            android:id="@+id/ordersDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="5dp"
            android:gravity="center_horizontal"
            android:text="@string/ordersDescription"
            style="@style/Widget.App.OrdersListAndSettingsStdText" />

        <View
            android:id="@+id/divider"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/defaultBigMargin"
            android:layout_marginBottom="@dimen/defaultBigMargin"
            android:layout_below="@id/ordersDescription"
            android:layout_centerHorizontal="true"
            android:background="@color/orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_centerHorizontal="true"
            android:text="@string/ordersListNoOrders"
            style="@style/Widget.App.OrdersListAndSettingsStdText" />

    </RelativeLayout>

</FrameLayout>