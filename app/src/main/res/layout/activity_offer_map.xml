<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fullybelly.views.activities.OfferMapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.fullybelly.views.fragments.offerDetailActivity.OfferMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_offer_map" />

    <fragment
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:name="com.fullybelly.views.fragments.common.ToolbarFragment"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_toolbar"
        class="com.fullybelly.views.fragments.common.ToolbarFragment" />

</RelativeLayout>